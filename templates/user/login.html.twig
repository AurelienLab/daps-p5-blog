{% extends 'base-login.html.twig' %}

{% block content %}
    <main>
        <!-- SUBSCRIPTION FORM -->
        <section class="subscription">
            <div class="subscription__container">
                <h2 class="subscription__heading">Connexion</h2>
                <form class="form" method="POST" action="#">
                    {% if(error('form')) %}
                        <div class="form__error">{{ error('form') }}</div>
                    {% endif %}
                    <div class="form__row">
                        <div class="form__field">
                            <label for="email">Adresse e-mail</label>
                            <input type="email" id="email" name="email" placeholder=" " required
                                   value="{{ credentials.email }}"/>
                            {% if(error('email')) %}
                                <div class="form__error">{{ error('email') }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form__row">
                        <div class="form__field">
                            <label for="password">Mot de passe</label>
                            <input type="password" id="password" name="password" placeholder=" " required
                                   value="{{ credentials.password }}">
                            {% if(error('password')) %}
                                <div class="form__error">{{ error('password') }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form__row subscription__submit">
                        {{ csrf('login_form') }}
                        <button type="submit" class="btn btn--primary btn--wide">Connexion</button>
                    </div>
                </form>
                <p class="text-center">Vous n'avez pas encore de compte ? <a href="{{ route('user.subscribe') }}">S'inscrire</a>
                </p>
                <p class="text-center"><a href="#">Mot de passe oubli√© ?</a></p>
            </div>
        </section>
    </main>
{% endblock %}
