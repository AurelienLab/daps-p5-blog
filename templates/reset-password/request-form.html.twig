{% extends 'base-login.html.twig' %}

{% block content %}
    <main>
        <!-- SUBSCRIPTION FORM -->
        <section class="subscription">
            <div class="subscription__container">
                <h2 class="subscription__heading">Mot de passe oublié</h2>
                <p>Indiquez votre adresse e-mail ci-dessous, et nous vous enverrons un lien pour modifier votre mot de
                    passe.</p>
                <form class="form" method="POST" action="#">
                    {% if(error('form')) %}
                        <div class="form__error">{{ error('form') }}</div>
                    {% endif %}
                    <div class="form__row">
                        <div class="form__field">
                            <label for="email">Adresse e-mail</label>
                            <input type="email" id="email" name="email" placeholder=" " required
                                   value="{{ reset.email }}"/>
                            {% if(error('email')) %}
                                <div class="form__error">{{ error('email') }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form__row subscription__submit">
                        {{ csrf('reset_password_form') }}
                        <button type="submit" class="btn btn--primary btn--wide">Renouveler mon mot de passe</button>
                    </div>
                </form>
                <p class="text-center"><a href="{{ route('user.login') }}">Retour à la page de connexion</a>
                </p>
            </div>
        </section>
    </main>
{% endblock %}
