{% extends 'base.html.twig' %}

{% block content %}

    <main class="error">
        <div class="hero hero--default">
            <div class="hero__overlay"></div>
            <img class="hero__image" src="/assets/images/hero-pattern.svg">
            <div class="hero__container">
                <h1 class="hero__title">Une erreur est survenue</h1>
            </div>
        </div>

        <div class="error__container">
            <h1 class="error__code">{{ code }}</h1>
            {% if displayMessage %}
                <p class="error__message">{{ message }}</p>
            {% else %}
                {% if code == '404' %}
                    <p class="error__message">Oups ! La page que vous recherchez ne semble pas exister...</p>
                {% elseif code == '403' %}
                    <p class="error__message">Il semblerait que vous n'ayez pas le droit de vous balader par ici !</p>
                {% else %}
                    <p class="error__message">Oups, il semblerait qu'une erreur est survenue sur la page.</p>
                {% endif %}
            {% endif %}
            <a href="{{ route('homepage.index') }}" class="btn btn--primary">Retourner Ã  l'accueil</a>

        </div>

    </main>

{% endblock %}
