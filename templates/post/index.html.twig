{% extends 'base.html.twig' %}

{% block content %}

    <main>
        <div class="hero hero--post-index">
            <div class="hero__overlay">
                <img class="hero__image" src="/assets/images/hero-pattern.svg">
            </div>

            <div class="hero__container">
                <h1 class="hero__title">Tous les articles</h1>

                <form method="get" class="form filters">
                    <div class="form__row">
                        <div class="form__field">
                            <label for="category">Catégorie</label>
                            <select name="category" , id="category">
                                <option>Toutes</option>
                                <option value="jeux-video">Jeux Vidéo</option>
                                <option value="programmation">Programmation</option>
                                <option value="musique">Musique</option>
                            </select>
                        </div>

                        <div class="form__field">
                            <label for="category">Catégorie</label>
                            <select name="category" , id="category">
                                <option>Toutes</option>
                                <option value="jeux-video">Jeux Vidéo</option>
                                <option value="programmation">Programmation</option>
                                <option value="musique">Musique</option>
                            </select>
                        </div>

                        <div class="form__field">
                            <button type="submit" class="btn btn--outline--primary">Rechercher</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="post-list">

            {% for post in posts %}
                {% include 'post/_post-card.html.twig' with { post } %}
            {% endfor %}
        </div>

    </main>

{% endblock %}
